
<h2>マイページ</h2>

  <div class="head">
   <h2>登録情報</h2>
  　 <%= link_to "編集する",  edit_public_customer_path(@customer) %>
  </div>

  <table class="table">
    <thead>

      <tr>
        <th>氏名</th>
        <td>
          <%= @customer.first_name %>&ensp;<%= @customer.last_name %>
        </td>
      </tr>

      <tr>
        <th>カナ</th>
        <td>
          <%= @customer.first_name_kana %>&ensp;<%= @customer.last_name_kana %>
        </td>
      </tr>

      <tr>
        <th>郵便番号</th>
        <td><%= @customer.post_code %></td>
      </tr>

    　<tr>
        <th>住所</th>
        <td><%= @customer.adress %></td>
      </tr>

      <tr>
        <th>電話番号</th>
        <td><%= @customer.tel_number %></td>
      </tr>

      <tr>
        <th>メールアドレス</th>
        <td><%= @customer.email %></td>
      </tr>

    </thead>
  </table>

  <h2>配送先</h2>
  　<%= link_to "一覧を見る",  public_shipping_adresses_path %>
  <h2>注文履歴</h2>
  　<%= link_to "一覧を見る",  public_orders_path %>
