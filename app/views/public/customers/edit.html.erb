<h2>会員情報編集</h2>
<%= form_with model:@customer, url:public_customer_path do |f| %>
   <div class="form-group">
        <%= f.label :"氏名" %>
        <%= f.text_field :first_name %>
        <%= f.text_field :last_name %>
   </div>
   <div class="form-group">
        <%= f.label :"フリガナ" %>
        <%= f.text_field :first_name_kana %>
        <%= f.text_field :last_name_kana %>
   </div>
   <div class="form-group">
        <%= f.label :"郵便番号" %>
        <%= f.text_field :post_code %>
   </div>
   <div class="form-group">
        <%= f.label :"住所" %>
        <%= f.text_field :adress %>
   </div>
   <div class="form-group">
        <%= f.label :"電話番号" %>
        <%= f.text_field :tel_number %>
   </div>
   <div class="form-group">
        <%= f.label :"メールアドレス" %>
        <%= f.email_field :email %>
   </div>
    <%= f.submit "編集内容を保存" %>
<% end %>
   <%= link_to "退会する",  public_customers_result_path %>