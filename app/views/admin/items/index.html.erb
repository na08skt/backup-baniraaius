<div class="container">
  <div class="row">

    <div class="col">
      <h1>商品一覧</h1>
    </div>
    <div class="col">
      <%= link_to "新規商品登録", new_admin_item_path %>
    </div>

    <div class="col">
      <table>
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>販売ステータス</th>
          </tr>
        </thead>
        <tr>
          <% @items.each do |item| %>
            <td><%= item.id %></td>
            <td><%= link_to item.name, admin_item_path(item) %></td>
            <td><%= item.tax_off_price %></td>
            <td><%= item.genre.name%></td>
            <% if item.selling_status == true %>
              <td>販売中</td>
            <% else %>
              <td>売切れ</td>
            <% end %>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>



