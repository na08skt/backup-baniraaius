<div class="container">
  <div class="row">

    <div class="col">
      <h1>ジャンル一覧・追加</h1>
      <%= form_with model: @genre, url: admin_genres_path do |f| %>
        <%= f.label :name, "ジャンル名" %>
        <%= f.text_field :name, placeholder: "新規ジャンル名", rows: 10 %>
        <%= f.submit "新規登録" %>
      <% end %>
    </div>

    <div class="col">
      <h2>ジャンル</h2>
      <% @genres.each do |genre| %>
        <p><%= genre.name %></p>
        <%= link_to "編集する", edit_admin_genre_path(genre.id) %>
      <% end %>
    </div>

  </div>
</div>