<table>
  <thead>
    <th><p>商品詳細</p></th>
  </thead>
  <tbody>
    <tr>
      <td><%= image_tag @item.get_image(300,300) %></td>
    </tr>
    <tr>
      <td><p>商品名</p></td>
      <td><%= @item.name %></td>
    </tr>
    <tr>
      <td><p>商品説明</p></td>
      <td><%= @item.introduction %></td>
    </tr>
    <tr>
      <td><p>ジャンル</p></td>
      <td><%= @item.genre.name %></td>
    </tr>
    <tr>
      <td>税込価格（税抜価格）</td>
      <td><%= @item.after_tax_on_price.round %>(<%= @item.tax_off_price %>)円</td>
    </tr>
    <tr>
      <td><p>販売ステータス</p></td>
      <td>
        <% if @item.selling_status == true %>
          <p>販売中</p>
        <% else %>
          <p>売切れ</p>
        <% end %>
      </td>
    </tr>
    <tr>
      <td>
        <%= link_to "編集する", edit_admin_item_path(@item) %>
      </td>
    </tr>
  </tbody>
</table>